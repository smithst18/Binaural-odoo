<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- absence request form  -->
    <record id="view_product_template_form_inherit_campaign" model="ir.ui.view">
        <field name="name">product.template.form.inherit.campaign</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!--  add boolean to product template for availablity for campaign -->
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="available_for_campaign"/>
                    <label for="available_for_campaign"/>
                </span>
            </xpath>
            <xpath expr="//div[@name='pricing']" position="after">
                <field name="show_original_price" invisible="1"/>
                <label for="original_price"
                       attrs="{'invisible': [('show_original_price', '!=', True)]}"/>
                <div  name="original_price"
                      attrs="{'invisible': [('show_original_price', '!=', True)]}">
                    <field  name="original_price" 
                            class="oe_inline" 
                            widget="monetary"
                    />
                </div>
            </xpath>
        </field>
    </record>

</odoo>