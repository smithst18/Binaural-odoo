<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- form view -->
        <record id="view_hr_absence_reason_form" model="ir.ui.view">
            <field name="name">hr.absence.reason.form</field>
            <field name="model">hr.absence.reason</field>
            <field name="arch" type="xml">
                <form string="Motivo de Ausencia">
                    <header/>
                    <sheet>
                        <group string="Motivo de Ausencia">
                            <group>
                                <field name="name" placeholder="Nombre del motivo..."/>
                                <field name="code" placeholder="Código único..."/>
                                <field name="description" placeholder="Descripción del motivo..."/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- tree view -->
        <record id="view_hr_absence_reason_tree" model="ir.ui.view">
            <field name="name">hr.absence.reason.tree</field>
            <field name="model">hr.absence.reason</field>
            <field name="arch" type="xml">
                <tree string="Motivo de Ausencia" create="1" >
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <!-- search view -->
        <record id="view_hr_absence_reason_search" model="ir.ui.view">
            <field name="name">hr.absence.reason.search</field>
            <field name="model">hr.absence.reason</field>
            <field name="arch" type="xml">
                <search string="Motivo de Ausencia">
                    <field name="name" string="Motivo"/>
                    <field name="code" string="Codigo"/>
                    <field name="active"/>
                </search>
            </field>
        </record>
        
        <!-- graph view -->

        <record id="hr_absence_reason_graph" model="ir.ui.view">
            <field name="name">hr.leave.graph.by.reason</field>
            <field name="model">hr.leave</field>
            <field name="arch" type="xml">
                 <graph string="Ausencias por Motivo y Empleado" type="bar">
                    <!-- group by reason -->
                    <field name="absence_reason_id" type="row"/>
                    <!-- each is a employee -->
                    <field name="employee_id" type="col"/>
                    <field name="number_of_days" type="col"/>
                    <!-- Medida: number of days  -->
                    <field name="number_of_days" type="measure"/>
                </graph>
            </field>
        </record>
    </data>
</odoo>