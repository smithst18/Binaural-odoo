<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- absence request form  -->
    <record id="view_hr_leave_form_inherit_reason" model="ir.ui.view">
        <field name="name">hr.leave.form.inherit.reason</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <!--  add reason after holiday_status_id (type of absence) -->
            <xpath expr="//field[@name='holiday_status_id']" position="after">
                <field name="absence_reason_id"/>
            </xpath>
        </field>
    </record>

    <!-- absence request form (manager) -->
    <record id="view_hr_leave_form_manager_inherit_reason" model="ir.ui.view">
        <field name="name">hr.leave.form.manager.inherit.reason</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager"/>
        <field name="arch" type="xml">
            <!-- same, add reason after type -->
            <xpath expr="//field[@name='holiday_status_id']" position="after">
                <field name="absence_reason_id"/>
            </xpath>
        </field>
    </record>
</odoo>