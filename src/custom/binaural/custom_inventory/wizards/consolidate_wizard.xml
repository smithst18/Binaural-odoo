<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="consolidate_package_wizard_form" model="ir.ui.view">
        <field name="name">consolidate.package.wizard.form</field>
        <field name="model">consolidate.package.wizard</field>
        <field name="arch" type="xml">
            <form string="ConsolidaciÃ³n de Paquetes">
                <group>
                    <field name="picking_id" readonly="1"/>
                    <field name="package_types" widget="many2many_tags" readonly="1"/>
                </group>

                <notebook>
                    <page string="Vista previa">
                        <field name="consolidation_line_ids" readonly="True">
                            <tree>
                                <field name="product_id"/>
                                <field name="package_type_id"/>
                                <field name="quantity"/>
                                <field name="weight"/>
                                <field name="volume"/>
                            </tree>
                        </field>
                    </page>
                </notebook>

                <footer>
                    <button name="action_consolidate" string="Consolidar" type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_consolidate_package_wizard" model="ir.actions.act_window">
        <field name="name">Consolidacion de Paquetes</field>
        <field name="res_model">consolidate.package.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>