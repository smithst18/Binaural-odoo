<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- absence request form  -->
    <record id="product_template_form_view_custom_package" model="ir.ui.view">
        <field name="name">product.template.form.view.custom.package</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- add package_type_id to product template -->
            <xpath expr="//page[@name='inventory']/group[@name='packaging']" position="after">
                <group string="Paqueteria para Consolidacion" name="inventory-package">
                    <group>
                        <field name="package_type_id"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>